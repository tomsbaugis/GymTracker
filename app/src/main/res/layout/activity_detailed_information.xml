<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".DetailedInformationActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp" app:srcCompat="@drawable/gym" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:fontFamily="sans-serif-black"
            android:textSize="10sp"
            android:textStyle="italic"
            android:text="GymTracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="7dp" app:layout_constraintTop_toBottomOf="@+id/imageView6"/>
    <TextView
            android:text="Aplūkot sīkāku informāciju par sporta zāli"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/textView18"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/textView17"/>
    <View
            android:id="@+id/divider13"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/textView18"/>
    <TextView
            android:text="Pilsēta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView19"
            tools:layout_editor_absoluteX="46dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/divider13"/>
    <EditText
            android:layout_width="308dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName6"
            tools:layout_editor_absoluteX="44dp" android:hint="Sporta zāles atrašanās vieta"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView19"/>
    <TextView
            android:text="Sporta zāles darba laiks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView20"
            tools:layout_editor_absoluteX="46dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/divider14"/>
    <View
            android:id="@+id/divider14"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName6"/>
    <View
            android:id="@+id/divider15"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20"/>
    <EditText
            android:layout_width="346dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/editTextTextPersonName7" tools:layout_editor_absoluteX="39dp"
            android:hint="Informācija par abonementa iespējām"/>
    <EditText
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/editTextTextPersonName8" tools:layout_editor_absoluteX="39dp"
            android:hint="Informācija par trenera nolīgšanas iespējām" app:layout_constraintVertical_bias="0.614"/>
    <View
            android:id="@+id/divider16"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7"/>
    <TextView
            android:text="Sporta zāles apmeklētība no rīta, pusdienlaikā un vakarā"
            android:layout_width="388dp"
            android:layout_height="29dp" android:id="@+id/textView21"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider17"/>
    <View
            android:id="@+id/divider17"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName8"/>
    <TextView
            android:text="Sporta zāles vērtējums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView22"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/textView21"/>
    <RatingBar
            android:layout_width="245dp"
            android:layout_height="59dp" android:id="@+id/ratingBar2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/textView22"/>
    <TextView
            android:text="Esošo klientu atsauksmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView23"
            tools:layout_editor_absoluteX="22dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName9"
            tools:layout_editor_absoluteX="19dp" android:hint="Atsauksmes" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>
    <Button
            android:text="Atpakaļ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="11dp" app:layout_constraintEnd_toStartOf="@+id/imageView6"
            android:layout_marginEnd="27dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PreferencesActivity">

    <TextView
            android:fontFamily="sans-serif-black"
            android:textSize="10sp"
            android:textStyle="italic"
            android:text="GymTracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView3"
    />
    <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp" app:srcCompat="@drawable/gym" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.528"/>
    <TextView
            android:text="Iestatīt sporta zāļu meklēšanas preferences"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="15dp"/>
    <TextView
            android:text="Vēlamā pilsēta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="24dp"/>
    <CheckBox
            android:text="Iespēja iegādāties abonementu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/inputSub"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintTop_toBottomOf="@+id/inputCity"
            android:layout_marginTop="20dp"/>
    <CheckBox
            android:text="Iespēja atrast personīgo treneri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/inputTrainer"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSub" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp"/>
    <SeekBar
            android:layout_width="317dp"
            android:layout_height="65dp" android:id="@+id/inputDensity"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp"/>
    <TextView
            android:text="Sporta zāles apmeklējuma blīvums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/inputTrainer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"/>
    <TextView
            android:text="Sporta zāles vērtējums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="49dp"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/inputDensity"/>
    <RatingBar
            android:layout_width="239dp"
            android:layout_height="48dp" android:id="@+id/ratingBar"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp" style="@style/Widget.AppCompat.RatingBar"
    />
    <Button
            android:text="Saglabāt izmaiņas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSavePreferences"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="207dp"/>
    <View
            android:id="@+id/divider5"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/inputSub"/>
    <View
            android:id="@+id/divider6"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputTrainer"/>
    <View
            android:id="@+id/divider7"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/inputDensity"/>
    <View
            android:id="@+id/divider8"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/inputCity"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.115"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
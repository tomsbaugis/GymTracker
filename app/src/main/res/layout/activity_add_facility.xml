<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".AddFacilityActivity">

    <TextView
            android:fontFamily="sans-serif-black"
            android:textSize="10sp"
            android:textStyle="italic"
            android:text="GymTracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp" app:srcCompat="@drawable/gym" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Ievadīt jaunas sporta zāles informāciju"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintHorizontal_bias="0.497"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/newTitle"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Pilsēta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"/>
    <EditText
            android:layout_width="306dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/newCity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.266"/>
    <TextView
            android:text="Adrese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:id="@+id/textView14" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider4"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/newCity"/>
    <View
            android:id="@+id/divider9"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" app:layout_constraintTop_toBottomOf="@+id/newAddress"
            android:layout_marginTop="16dp"/>
    <CheckBox
            android:text="Iespēja iegādāties abonementu"
            android:layout_width="248dp"
            android:layout_height="37dp"
            android:id="@+id/newSub"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.171"
            app:layout_constraintTop_toBottomOf="@+id/divider9" android:layout_marginTop="16dp"/>
    <View
            android:id="@+id/divider10"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newSub" android:layout_marginTop="24dp"/>
    <CheckBox
            android:text="Iespēja piedāvāt personīgo treneri"
            android:layout_width="248dp"
            android:layout_height="41dp" android:id="@+id/newTrainer"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/divider10" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.159"/>
    <View
            android:id="@+id/divider11"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newTrainer" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Sporta zāles apmeklētība"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView15"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <Button
            android:text="Pievienot sporta zāli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAddFacility"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newDensity"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.515"
            app:layout_constraintHorizontal_bias="0.477"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/newAddress"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.261"/>
    <SeekBar
            android:layout_width="267dp"
            android:layout_height="46dp" android:id="@+id/newDensity"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newTrainer" android:layout_marginTop="64dp"
            app:layout_constraintHorizontal_bias="0.18"/>
    <TextView
            android:text="Nosaukums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.086"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/newTitle"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.302"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".AddFacilityActivity">

    <TextView
            android:fontFamily="sans-serif-black"
            android:textSize="10sp"
            android:textStyle="italic"
            android:text="GymTracker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="40dp" app:srcCompat="@drawable/gym" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Ievadīt jaunas sporta zāles informāciju"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintHorizontal_bias="0.497"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Pilsēta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"/>
    <EditText
            android:layout_width="306dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            android:hint="Sporta zāles atrašanās vieta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <TextView
            android:text="Sporta zāles darba laiks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:id="@+id/textView14" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider4"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"/>
    <View
            android:id="@+id/divider9"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="1dp" tools:layout_editor_absoluteY="293dp"/>
    <CheckBox
            android:text="Iespēja iegādāties abonementu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/checkBox3"
            tools:layout_editor_absoluteX="24dp" app:layout_constraintVertical_bias="0.44"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            android:hint="Papildus informācija"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.66" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName4"
            android:hint="Papildus informācija"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.793" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName5"
            android:hint="Papildus informācija"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.905" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName3"
            tools:layout_editor_absoluteX="29dp" android:hint="Papildus informācija"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <View
            android:id="@+id/divider10"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3"/>
    <CheckBox
            android:text="Iespēja piedāvāt personīgo treneri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox4"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/divider10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"/>
    <View
            android:id="@+id/divider11"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"/>
    <TextView
            android:text="Sporta zāles apmeklētība"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView15"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp"/>
    <View
            android:id="@+id/divider12"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"/>
    <TextView
            android:text="Papildus informācija:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView16"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/divider12" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="Pievienot sporta zāli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAddFacility"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>